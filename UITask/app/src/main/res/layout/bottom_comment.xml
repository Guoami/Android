<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/bottom_comment"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="@drawable/dialog3"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    app:layout_behavior="com.guoami.uitask.BottomBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_alignTop="@+id/xin"
        android:layout_alignBottom="@+id/xin"
        android:layout_alignRight="@+id/readed"
        android:layout_alignEnd="@+id/readed"
        android:layout_alignLeft="@+id/readed"
        android:layout_alignStart="@+id/readed" />

    <TextView
        android:id="@+id/readed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="被问过：98"
        android:textColor="#999999"
        android:textSize="24px"
        android:layout_marginStart="28dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="-5dp"
        android:drawableTop="@drawable/ic_xin"
        android:gravity="center_horizontal"
        android:text="收藏"
        android:textColor="#999999"
        android:textSize="20px"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/comment"
        android:layout_toStartOf="@+id/comment" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="-5dp"
        android:drawableTop="@drawable/ic_comment"
        android:gravity="center_horizontal"
        android:text="184"
        android:textColor="#999999"
        android:textSize="20px"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBaseline="@+id/xin"
        android:layout_alignBottom="@+id/xin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>