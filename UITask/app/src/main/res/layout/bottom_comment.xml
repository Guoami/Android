<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_comment"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/dialog3"
    android:layout_gravity="bottom"
    app:layout_behavior="com.guoami.uitask.BottomBehavior">

    <RelativeLayout
        android:id="@+id/readed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/readed_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/readed_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被问过：98"
            android:textColor="#999999"
            android:textSize="24px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/loved"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/comment"
        android:layout_toStartOf="@+id/comment">

        <TextView
            android:id="@+id/xin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/xin"
            android:text="收藏"
            android:textColor="#999999"
            android:textSize="20px"
            android:clickable="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/xined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/xined"
            android:text="已收藏"
            android:textColor="#999999"
            android:textSize="20px"
            android:clickable="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/loved"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment"
            android:clickable="true"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="184"
            android:textColor="#999999"
            android:textSize="20px"
            android:clickable="true"/>
    </LinearLayout>

</RelativeLayout>