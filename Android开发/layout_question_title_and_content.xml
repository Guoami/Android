<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
  >

    <TextView
        android:id="@+id/txt_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="16dp"
        android:paddingBottom="30dp"
        android:text="使用 Dalvik 可执行文件分包时，构建变体可能对构建流程的管理很有帮助吗?"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/txt_question_title"
        app:layout_scrollFlags="scroll"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_below="@id/txt_question_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
      <include layout="@layout/layout_question_answer_people_bar"/>

      <android.support.v7.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardElevation="8dp"
          app:contentPadding="16dp"
      >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:text="@string/content1"
            android:textSize="18sp"
        />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardElevation="8dp"
          app:contentPadding="16dp"
      >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:text="@string/content3"
            android:textSize="18sp"
        />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardElevation="8dp"
          app:contentPadding="16dp"
      >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:text="@string/content1"
            android:textSize="18sp"
        />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardElevation="8dp"
          app:contentPadding="16dp"
      >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:text="@string/content3"
            android:textSize="18sp"
        />
      </android.support.v7.widget.CardView>

    </LinearLayout>

  </RelativeLayout>

</merge>